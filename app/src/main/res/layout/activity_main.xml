<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dns.calculator.MainActivity">
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="0"
            android:id="@+id/answer"
            android:layout_weight="3"
            android:layout_span="4"
            android:lines="8"
            android:textSize="24dp"
            android:gravity="center"/>
    </TableRow>
    <TableRow android:weightSum="4">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ac"
            android:text="AC"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/c"
            android:text="C"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/dot"
            android:text="."
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/multi"
            android:text="*"
            android:onClick="Click"/>
    </TableRow>
    <TableRow android:weightSum="4">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/seven"
            android:text="7"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/eight"
            android:text="8"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/nine"
            android:text="9"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/divide"
            android:text="/"
            android:onClick="Click"/>
    </TableRow>
    <TableRow android:weightSum="4">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/four"
            android:text="4"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/five"
            android:text="5"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/six"
            android:text="6"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/plus"
            android:text="+"
            android:onClick="Click"/>
    </TableRow>
    <TableRow android:weightSum="4">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/one"
            android:text="1"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/two"
            android:text="2"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/three"
            android:text="3"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/minus"
            android:text="-"
            android:onClick="Click"/>
    </TableRow>
    <TableRow android:weightSum="4">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/left_bracket"
            android:text="("
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/zero"
            android:text="0"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/right_bracket"
            android:text=")"
            android:onClick="Click"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/button_calc"
            android:text="="
            android:onClick="Click"/>
    </TableRow>
</TableLayout>
